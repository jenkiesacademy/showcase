{
  "name": "@showcase/kid-safe-media",
  "version": "1.0.0",
  "description": "Local tool to generate kid-safe versions of movies by silencing profanity",
  "main": "electron/main.mjs",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:all": "npm run build && npm run electron:build",
    "start": "node dist/cli.js",
    "dev": "tsc --watch",
    "package:win": "pkg . --targets node18-win-x64 --output dist/kid-safe-media-win.exe",
    "package:mac": "pkg . --targets node18-macos-x64 --output dist/kid-safe-media-mac",
    "electron:dev": "npm run build && electron .",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac"
  },
  "bin": {
    "sanitize": "./dist/cli.js"
  },
  "keywords": [
    "media",
    "sanitizer",
    "profanity",
    "plex"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "commander": "^11.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "wav": "^1.0.2"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/node": "^20.11.5",
    "@types/wav": "^1.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "pkg": "^5.8.1",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.kidsafemedia.app",
    "productName": "Kid Safe Media Sanitizer",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "profiles/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "profiles",
        "to": "profiles"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}